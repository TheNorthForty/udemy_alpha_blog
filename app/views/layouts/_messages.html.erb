<% flash.each do |name, msg| %>
<% flash_color = "alert-success" %>
<% flash_color = "alert-danger" if name == "alert" %> 
<div class="alert <%= flash_color %> alert-dismissible fade show container" role="alert">
  <%= msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>

